{% extends 'pages/layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('styles/connexion.css') }}>
{% endblock %}

{% block body %}
    {% for message in app.flashes('compte-error') %}
        <div class="message-error">
            <p>{{message}}</p>
        </div>
	{% endfor %}
    
    {{ form_start(form) }}

        {{ form_label(form.email) }}
        {{ form_widget(form.email, { full_name: "email" }) }}
        {{ form_errors(form.email) }}

        {{ form_label(form.password) }}
        {{ form_widget(form.password, { full_name: "password" }) }}
        {{ form_errors(form.password) }}

    {{ form_end(form) }}
{% endblock %}