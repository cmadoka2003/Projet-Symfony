{% extends 'pages/layout.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>PROFIL</h1>

    <div>
    {% if app.user.avatar is null %}
        <img src={{ asset("img/Default.jpg") }} alt="image par dÃ©faut">
    {% else %}
        <img src={{ asset("uploads/" ~ app.user.avatar) }} alt="image de profil">
    {% endif %}
    </div>

    <div>
        <p>Pseudo: {{app.user.pseudo}}</p>
    </div>

    <div>
        <p>Email: {{app.user.email}}</p>

    {% if app.user.emploi is null %}
        <p>Emploi: N/A</p>
    {% else %}
        <p>Emploi: {{app.user.emploi}}</p>
    {% endif %}

    {% if app.user.phone is null %}
        <p>Phone: N/A</p>
    {% else %}
        <p>Phone: {{app.user.phone}}</p>
    {% endif %}

    {% if app.user.siteURL is null %}
        <p>SiteUrl: N/A</p>
    {% else %}
        <p>SiteUrl: <a href={{app.user.siteURL}}></a>{{app.user.siteURL}}</p>
    {% endif %}
    </div>

    <div>
    {% if app.user.description is null %}
        <p>Description: N/A</p>
    {% else %}
        <p>Description: {{app.user.description}}</p>
    {% endif %}
    </div>
    <button><a href="/profil/update">Modifier</a></button>
{% endblock %}